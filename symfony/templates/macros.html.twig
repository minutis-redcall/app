{% macro phone(phone) %}
    <a href="tel:{{ phone.e164 }}">
        <div class="iti__flag iti__{{ phone.countryCode|lower }}" style="float:left;"></div>&nbsp; {{ phone.national }}
    </a>
{% endmacro %}

{% macro badge(badge) -%}
    {% if is_granted('ROLE_ADMIN') -%}
        <a href="{{ path('admin_badge_manage', app.request.query.all|merge({id: badge.id})) }}" alt="{{ badge.description }}" target="_blank">{{ badge.name }}</a>
    {%- else -%}
        <span alt="{{ badge.description }}">{{ badge.name }}</span>
    {%- endif %}
{%- endmacro %}
