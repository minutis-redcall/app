<textarea rows="{{ body|split("\n")|length + 6 }}" style="width: 100%;">
curl "{{ base }}{{ uri }}" \
     -X '{{ method }}' \
     -H 'Content-Type: application/json; charset=utf-8' \
     -H 'Content-Length: {{ body|length }}' \
     -H 'Authorization: Bearer {{ token }}' \
     -H 'X-Signature: {{ token.sign(method, uri, body) }}' \
     -d $'{{ body }}'
</textarea>

