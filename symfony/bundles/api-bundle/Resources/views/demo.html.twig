<textarea rows="{{ body|split("\n")|length + 5 }}" style="width: 100%;">
curl "{{ base }}{{ uri }}" \
     -X '{{ method }}'
     -H 'Content-Type: application/json; charset=utf-8' \
     -H 'Authorization: {{ token }}' \
     -H 'X-Signature: {{ token.sign(method, uri, body) }}' \
     -d $'{{ body }}'
</textarea>

